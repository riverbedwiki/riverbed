<div class="max-w-prose">
  <div class="text-2xl font-semibold">
    <%= @theory.name %>
  </div>

  <div class="py-3 whitespace-pre-line"><%= @theory.body %></div>

  <section>
    <h3 class="font-bold text-xl"><%= t "theory.objections" %></h3>
    <% @theory.objections.each do |o| %>
      <div class="py-3">
        <h4 class="font-semibold"><%= o.title %></h4>
        <div class="whitespace-pre-line"><%= o.body %></div>
      </div>
    <% end %>
  </section>
</div>