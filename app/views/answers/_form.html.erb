<%= form_with(model: [@question, answer]) do |form| %>
  <% if answer.errors.any? %>
    <div style="color: red">
      <ul>
        <% answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :theory_id, style: "display: block" %>
    <%= form.number_field :theory_id %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit t("general.submit") %>
  </div>
<% end %>